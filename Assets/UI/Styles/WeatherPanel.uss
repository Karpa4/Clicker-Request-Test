.weather-container {
    width: 100%;
    height: 100%;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.weather-icon {
    width: 100px; 
    height: 100px;
    min-width: 80px;
    max-width: 120px;
    margin-right: 20px;
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    margin-bottom: 10px;
}

.weather-label {
    font-size: 24px;
    color: white;
    -unity-text-align: middle-center;
}